{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": [
      "es2017"
    ],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": ".",
    "paths": {
      "*": [
        "./src/*"
      ],
      "tests": [
        "tests/*"
      ],
      "components/*": [
        "./src/components/*"
      ],
      "containers/*": [
        "./src/containers/*"
      ],
      "global/*": [
        "./src/global/*"
      ],
      "screens/*": [
        "./src/screens/*"
      ],
      "utils/*": [
        "./src/utils/*"
      ],
      "constants/*": [
        "./src/constants/*"
      ],
      "store/*": [
        "./src/store/*"
      ],
    },
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}